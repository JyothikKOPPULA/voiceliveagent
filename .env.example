# Azure Voice Live Agent Configuration
# These are required environment variables for the voice live agent

# Azure Voice Live Configuration
AZURE_VOICE_LIVE_ENDPOINT=your_azure_voice_live_endpoint
AZURE_VOICE_LIVE_AGENT_CONNECTION_STRING=your_azure_ai_projects_connection_string
AZURE_VOICE_LIVE_API_VERSION=2024-12-15-preview

# Azure TTS Voice Configuration
AZURE_TTS_VOICE=en-US-AriaNeural

# Azure Avatar Configuration  
AZURE_VOICE_AVATAR_CHARACTER=lisa
AZURE_VOICE_AVATAR_STYLE=casual-sitting
AZURE_VOICE_AVATAR_WIDTH=1920
AZURE_VOICE_AVATAR_HEIGHT=1080
AZURE_VOICE_AVATAR_BITRATE=1000000

# Transcription Configuration
AZURE_VOICE_TRANSCRIPTION_LANGUAGES=en-US,hi-IN
AZURE_VOICE_TRANSCRIPTION_MODE=auto

# Agent Configuration (Will be automatically set when creating agents through UI)
AGENT_MODEL=gpt-4o-mini
AGENT_NAME=voice-agent
AGENT_INSTRUCTIONS=You are an AI Voice Assistant designed to have natural conversations with users.
AZURE_VOICE_LIVE_AGENT_ID=

# Optional: ICE Servers for WebRTC (comma-separated)
# AZURE_VOICE_AVATAR_ICE_URLS=stun:stun.l.google.com:19302